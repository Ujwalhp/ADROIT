#include<iostream> 
#include<math.h>
using namespace std ; 
 
class time 
 {
	public: 
	int seconds , minutes , hours ; 
	void get(){ 
	cout << "enter time in seconds  : " << endl ; 
	cin >> seconds ; 
	} 
	void ans(){ 
    hours = seconds/3600 ; 
   // seconds = seconds%3600 ;
    minutes = seconds/60 ; 
    seconds = seconds%60 ;
	cout << " The time in HH:MM:SS format is :  " << hours  << ":"<< minutes <<":"<< seconds << endl ;
	}

}; 
int main(){ 
time obj ; 
obj.get() ; 
obj.ans() ; 
return 0 ;
}

